<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".result.presentation.ResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/result_title"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/origin_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_origin"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/origin" />

        <TextView
            android:id="@+id/origin"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:text="value" />

        <TextView
            android:id="@+id/destination_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_destination"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/destination" />

        <TextView
            android:id="@+id/destination"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/origin"
            tools:text="value" />

        <TextView
            android:id="@+id/distance_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_distance"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/distance" />

        <TextView
            android:id="@+id/distance"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/destination"
            tools:text="value" />

        <TextView
            android:id="@+id/duration_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_duration"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/duration" />

        <TextView
            android:id="@+id/duration"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/distance"
            tools:text="value" />

        <TextView
            android:id="@+id/has_tolls_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_has_tolls"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/has_tolls" />

        <TextView
            android:id="@+id/has_tolls"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/duration"
            tools:text="value" />

        <TextView
            android:id="@+id/toll_count_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_tolls_count"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toll_count" />

        <TextView
            android:id="@+id/toll_count"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/has_tolls"
            tools:text="value" />

        <TextView
            android:id="@+id/toll_cost_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_tolls_cost"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toll_cost" />

        <TextView
            android:id="@+id/toll_cost"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/toll_count"
            tools:text="value" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/group_toll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="toll_count_hint,toll_cost_hint,toll_count,toll_cost" />

        <TextView
            android:id="@+id/fuel_usage_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_fuel_usage"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fuel_usage" />

        <TextView
            android:id="@+id/fuel_usage"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/toll_cost"
            tools:text="value" />

        <TextView
            android:id="@+id/fuel_cost_hint"
            style="@style/TextViewResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:text="@string/result_item_fuel_cost"
            app:layout_constraintEnd_toStartOf="@id/guideline_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fuel_cost" />

        <TextView
            android:id="@+id/fuel_cost"
            style="@style/TextViewValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/fuel_usage"
            tools:text="value" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_large_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/medium_large_margin"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fuel_cost">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_view_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:text="@string/result_antt_prices_title"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@id/constraint_card"
                    app:layout_constraintStart_toStartOf="@id/constraint_card"
                    app:layout_constraintTop_toTopOf="@id/constraint_card" />

                <TextView
                    android:id="@+id/refrigerated_hint"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/result_item_refrigerated"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/guideline_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/refrigerated" />

                <TextView
                    android:id="@+id/refrigerated"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_card"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_card_title"
                    tools:text="value" />

                <TextView
                    android:id="@+id/general_hint"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/result_item_general"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/guideline_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/general"
                    tools:text="value" />

                <TextView
                    android:id="@+id/general"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_card"
                    app:layout_constraintTop_toBottomOf="@+id/refrigerated"
                    tools:text="value" />

                <TextView
                    android:id="@+id/bulk_hint"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/result_item_bulk"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/guideline_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bulk"
                    tools:text="value" />

                <TextView
                    android:id="@+id/bulk"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_card"
                    app:layout_constraintTop_toBottomOf="@+id/general"
                    tools:text="value" />

                <TextView
                    android:id="@+id/neogranel_hint"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/result_item_neogranel"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/guideline_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/neogranel"
                    tools:text="value" />

                <TextView
                    android:id="@+id/neogranel"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_card"
                    app:layout_constraintTop_toBottomOf="@+id/bulk"
                    tools:text="value" />

                <TextView
                    android:id="@+id/dangerous_hint"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:text="@string/result_item_dangerous"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toStartOf="@id/guideline_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dangerous"
                    tools:text="value" />

                <TextView
                    android:id="@+id/dangerous"
                    style="@style/TextViewResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginEnd="@dimen/medium_margin"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/constraint_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_card"
                    app:layout_constraintTop_toBottomOf="@+id/neogranel"
                    tools:text="value" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintGuide_percent="0.4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>